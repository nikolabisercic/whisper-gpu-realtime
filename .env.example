# Docker Compose Build Optimization
COMPOSE_BAKE=true

# GPU Configuration (0 for first GPU, 1 for second, etc.)
CUDA_VISIBLE_DEVICES=0

# Default Whisper Model
# Options: tiny, base, small, medium, large-v2, large-v3
# tiny = fastest but less accurate
# small = good balance (recommended)
# medium = most accurate for general use
DEFAULT_MODEL=small

# Development Mode
DEVELOPMENT=false

# Port Configuration (change if conflicts)
FRONTEND_PORT=6542
BACKEND_PORT=6541

# CORS Configuration
FRONTEND_URL=http://localhost:6542
VITE_BACKEND_URL=http://localhost:6541

# Optional: Model Cache Directory (inside container)
# Defaults to /root/.cache/huggingface
# MODEL_CACHE_DIR=/models

# Optional: Audio Processing Settings
# AUDIO_CHUNK_DURATION_MS=5000
# AUDIO_SAMPLE_RATE=16000